<div class="jumbotron text-center" id="jumbotron">
    <h1 class="pagetitle">Notes of Onion</h1>
</div>

    <div class="row">
        <div class="col-12">
            <h3 data-id="{{article._id}}">Article ID: {{article._id}}</h3>
        </div>
    </div>


    <div class="row">
            <ul class="list-group">
                {{!-- {{#each article}} --}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-4">
                            <h4>{{article.title}}</h4>
                        </div>
                        <div class="col-md-4">
                            <p>{{article.summary}}</p>
                            <p><a href="{{url}}">{{url}}</a></p>
                        </div>
                        <div class="col-md-3">
                            <h5>{{article.note.title}}</h5>
                            <p>{{article.note.body}}</p>
                        </div>
                        <div class="col-md-1">
                            <br>
                            <a href="/articles/{{_id}}">
                            <button class="btn btn-primary" type="button" data-id="{{_id}}">Add/See Notes</button></a>
                        </div>
                    </div>
                </li>
                {{!-- {{/each}} --}}
            </ul>
            <br><br>
    </div>
    <div>
        {{article.notes}}
    </div>