
<div class="jumbotron text-center" id="jumbotron">
    <h1 class="pagetitle">Mongoose Onion Peeler</h1>
</div>

    <h1>
        <button class="btn btn-primary scrape" type="button">Peel New Articles</button>
    </h1>

    <div class="row">
        <div class="col-12">
            <ul class="list-group">
                {{#each article}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-4">
                            <h4>{{this.title}}</h4>
                        </div>
                        <div class="col-0"></div>
                        <div class="col-5">
                            <p>{{this.summary}}</p>
                            <p><a href="{{url}}">{{url}}</a></p>
                        </div>
                        <div class="col-3">
                            <br>
                            <a href="/articles/{{_id}}">
                            <button class="btn btn-primary" type="button" data-id="{{_id}}">Save Article</button></a>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
            <br><br>
        </div> 
    </div>


